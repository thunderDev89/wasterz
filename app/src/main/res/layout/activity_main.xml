<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.acemen.android.wasterz.MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/lb_latitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latitude"
            tools:layout_editor_absoluteY="97dp"
            app:layout_constraintRight_toLeftOf="@+id/tv_latitude"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/tv_latitude"
            android:layout_width="146dp"
            android:layout_height="19dp"
            tools:layout_editor_absoluteX="93dp"
            tools:layout_editor_absoluteY="97dp"/>

        <TextView
            android:id="@+id/lb_longitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Longitude"
            tools:layout_editor_absoluteY="58dp"
            app:layout_constraintRight_toLeftOf="@+id/tv_longitude"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/tv_longitude"
            android:layout_width="146dp"
            android:layout_height="19dp"
            tools:layout_editor_absoluteX="93dp"
            tools:layout_editor_absoluteY="58dp"/>

        <TextView
            android:id="@+id/lb_datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Longitude"
            app:layout_constraintRight_toLeftOf="@+id/tv_longitude"
            tools:layout_editor_absoluteY="58dp"/>

        <TextView
            android:id="@+id/tv_datetime"
            android:layout_width="149dp"
            android:layout_height="19dp"
            tools:layout_editor_absoluteX="93dp"
            tools:layout_editor_absoluteY="58dp"/>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
