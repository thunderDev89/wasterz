<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical"
              android:background="@drawable/gradient_background"
              tools:context=".view.contribute.TakeAPicFragment">

    <include layout="@layout/logo"/>
    <ImageView
        android:id="@+id/iconPhoto"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:contentDescription="photo icon"
        android:src="@drawable/ic_photo_camera_white_24dp"/>
    <ImageView
        android:id="@+id/capturedPhoto"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:contentDescription="Captured photo"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/take_a_photo_label"
        android:textSize="12sp"/>

</LinearLayout>
